@model ChatsIndexModel

@{
    ViewData["Title"] = $"Чаты пользователя (Id = {Model.User.Id}, Login = {Model.User.Name})";
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>
            Чаты пользователя<br />
            <small class="text-muted">Id = @Model.User.Id</small><br />
            <small class="text-muted">Login = @Model.User.Name</small>
        </h2>
    </div>

    <div class="card bg-dark border-secondary mt-3">
        <div class="card-body">
            @using (Html.BeginForm("Index", "Chats", FormMethod.Get, new { onsubmit = "formGetRedirect(event);" }))
            {
                <div class="row g-3 align-items-center">
                    <div class="col-md-4">
                        <input asp-for="SearchString"
                               class="form-control bg-secondary border-dark text-white"
                               placeholder="Введите id или название для поиска..." />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fa fa-search me-2"></i>Найти
                        </button>
                    </div>
                    <div class="col-md-2">
                        <a class="btn btn-outline-secondary w-100"
                           asp-action="Index"
                           asp-route-userId="@Model.User.Id"
                           asp-route-sortBy="@Model.SortBy"
                           asp-route-page="@Model.Page">
                            <i class="fa fa-times me-2"></i>Сбросить
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="table-container">
        <table class="table table-dark table-hover align-middle">
            <thead>
                <tr>
                    <th>
                        @Html.DisplaySortColumnTitle(Model.SortBy, nameof(ChatModel.Id), model => model.Chats.First().Id, true)
                    </th>
                    <th>
                        @Html.DisplaySortColumnTitle(Model.SortBy, nameof(ChatModel.Name), model => model.Chats.First().Name)
                    </th>
                    <th>Тип</th>
                    <th>
                        @Html.DisplaySortColumnTitle(Model.SortBy, nameof(ChatModel.OwnerUserName), model => model.Chats.First().OwnerUserName)
                    </th>
                    <th>
                        @Html.DisplaySortColumnTitle(Model.SortBy, nameof(ChatModel.IsDeleted), model => model.Chats.First().IsDeleted)
                    </th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var chat in Model.Chats.EmptyIfNull())
                {
                    <tr>
                        <td>@chat.Id</td>
                        <td>@chat.Name</td>
                        <td class="text-left">
                            @if (chat.OwnerUserId == null)
                            {
                                <span>Негрупповой</span>
                            }
                            else
                            {
                                <span>Групповой</span>
                            }
                        </td>
                        <td>@chat.OwnerUserName</td>
                        <td>
                            @if (chat.IsDeleted)
                            {
                                <span class="badge bg-danger">Удален</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Активен</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-light dropdown-toggle"
                                        type="button"
                                        id="actionsDropdown-@chat.Id"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="fa fa-cog"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="actionsDropdown-@chat.Id">
                                    <li>
                                        <a class="dropdown-item" 
                                           asp-action="Edit" 
                                           asp-route-userId="@Model.UserId" 
                                           asp-route-chatId="@chat.Id">
                                            <i class="fa fa-edit me-2"></i>Редактировать
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    @if (!chat.IsDeleted)
                                    {
                                        <li>
                                            <form asp-controller="Chats"
                                                  asp-action="Delete"
                                                  asp-route-userId="@Model.UserId"
                                                  asp-route-chatId="@chat.Id"
                                                  method="post">
                                                <button type="submit"
                                                        class="dropdown-item text-danger"
                                                        onclick="return confirm('Удалить чат @chat.Name?')">
                                                    <i class="fa fa-trash me-2"></i>Удалить
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <form asp-controller="Chats"
                                                  asp-action="Restore"
                                                  asp-route-userId="@Model.UserId"
                                                  asp-route-chatId="@chat.Id"
                                                  method="post">
                                                <button type="submit"
                                                        class="dropdown-item text-success"
                                                        onclick="return confirm('Восстановить чат @chat.Name?')">
                                                    <i class="fa fa-undo me-2"></i>Восстановить
                                                </button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Pagination {
    @Html.DisplayPagination(Model)
}