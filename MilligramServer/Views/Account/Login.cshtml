@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<style>
    label {
        min-height: calc(1.5rem);
        padding: 0.2rem 1rem;
        font-size: 1.25rem;
    }
    input, span, button {
        min-height: calc(2rem);
        padding: 0.2rem 1rem;
        font-size: 1.25rem;
    }
</style>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { style = "width: 300px; margin: 30px auto;" }))
{
    <div style="text-align: center;">
        <div style="margin-top: 20px;">
            <label asp-for="Login">@Html.DisplayNameFor(model => model.Login):</label>
            <input asp-for="Login" class="form-control" style="width: 100%;" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>

        <div style="margin-top: 20px;">
            <label asp-for="Password">@Html.DisplayNameFor(model => model.Password):</label>
            <input asp-for="Password" class="form-control" style="width: 100%;" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />

        <div style="margin-top: 30px;">
            <button type="submit" class="btn btn-primary" style="width: 100%;"><i class="fa fa-sign-in"></i> Войти</button>
        </div>
    </div>
}